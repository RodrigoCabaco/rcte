function print_str_list(str list_name) => {
    Write "["
    str quote >>""
    str(quote+")
    str final >>""
    num len >>$list_name$.length
    for i in range:len; {
        getStrListValue($list_name$[i])
        str(final+quote)
        str(final+$list_name$[i])
        str(final+quote)
        ;;num len_1 >>$list_name$.length;;--len_1
        if num(len_1!=i);{
            str(final+,)
        };
    };
    WriteStr {final}
    Write "]"
    return final;

};
function print_num_list(str list_name) => {
